    "version": "0.2.0",
    "configurations": [
        {
            "name": "Command line agent chat",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/playbooks/applications/agent_chat.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/tests/data/02-personalized-greeting.md",
                "--verbose"
            ]
        },
        {
            "name": "Web server for agent chat",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/playbooks/applications/web_agent_chat.py",
            "console": "integratedTerminal",
            "args": [
                "--port",
                "8000"
            ]
        },
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/playbooks/test_examples.py"
            ]
        },
    ]
}